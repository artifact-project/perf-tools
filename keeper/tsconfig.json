{
	"compilerOptions": {
	  "target": "es2015",
	  "module": "commonjs",
	  "lib": [
      	"dom"
	  ],  
	  "declaration": true,
	  "isolatedModules": true,
	  "strict": true,
	  "noUnusedParameters": true,
	  "noImplicitReturns": false,
	  "noFallthroughCasesInSwitch": true,
	  "moduleResolution": "node",
	  "esModuleInterop": true,
	  "resolveJsonModule": true,
	  "sourceMap": true,
	  "skipLibCheck": true
	},
	"exclude": [
	  "node_modules"
	]
}
